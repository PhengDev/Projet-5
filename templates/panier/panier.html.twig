{% extends 'base.html.twig.' %}

{% block title  %}Panier
{% endblock %}

{% block body %}
    <div class="container page">

        <h2 class="text-center">Mon panier</h2>
        <div class="col-md-10">
            {% for type, flash_messages in app.session.flashBag.all %}
                {% for msg in flash_messages %}
                    <div class="alert alert-{{ type }}">
                        {{ msg }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% if  properties | length == 0  %}
                <div class="jumbotron text-center">
                    <h2>Votre panier est vide</h2>
                </div>
            {% else  %}
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Séries</th>
                            <th></th>
                            <th>Nom</th>
                            <th>Quantité</th>
                            <th>PrixUT</th>
                            <th>Total</th>
                            <th>Supprimer</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% set somme = 0 %}
                        {% for property in properties  %}
                            <form action="{{ path('panier.ajout',{"id": property.id}) }}" method="get">
                                <tr>
                                    <td>{{ property.seriesType }}</td>
                                    <td>
                                        {% if property.filename %}
                                            <a class="btn" data-target="#modalIMG" data-toggle="modal" href="#">
                                                <img class="image-style-thumb" src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" height="40" alt="{{ property.title }}"/>
                                            </a>
                                        {% else %}
                                            <a class="btn" data-target="#modalIMG" data-toggle="modal" href="#">
                                                <img src="{{ '/images/properties/empty.jpg' | imagine_filter('thumb') }}" height="40" alt="card-img-top">
                                            </a>
                                        {% endif %}
                                    </td>
                                    <td>{{ property.title }}</td>
                                    <td class="form-inline">

                                        <select class="form-control" id="exampleFormControlSelect1" name="qte" onchange="this.form.submit()">
                                            {% for i in 1..5 %}
                                                <option value="{{ i }}" {% if i == panier[property.id] %} selected="selected" {% endif %}>
                                                    {{ i }}</option>
                                            {% endfor %}
                                        </select>
                                    </td>
                                    <td>{{ property.price }}
                                        €</td>
                                    <td>{{ (property.price * panier[property.id])|number_format(0, '', '.') }}
                                        €</td>
                                    <td>
                                        <a href="{{ path('panier.suppArticle',{"id": property.id}) }}">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                                {% set somme = somme + property.price * panier[property.id] %}
                            </form>

                            <!-- Modal -->

                            <!-- Img -->
                            <div aria-hidden="true" aria-labelledby="myModalLabel" class="modal fade" id="modalIMG" role="dialog" tabindex="-1">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-body mb-0 p-0">
                                            <a class="btn btn-rounded position-absolute close" data-dismiss="modal" type="button">
                                                <i class="fas fa-times"></i>
                                            </a>
                                            {% if property.filename %}
                                                <img class="image-style-thumb" src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('large') }}" alt="{{ property.title }}"/>
                                            {% else %}
                                                <img src="{{ '/images/properties/empty.jpg' | imagine_filter('large') }}" alt="card-img-top">
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Remove All-->
                            <div class="modal fade" id="removeAll" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Vider le panier</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            Êtes-vous sûr de vouloir vider votre panier ?
                                        </div>
                                        <div class="modal-footer">
                                            <a class="btn btn-danger" role="button" href="{{ path('panier.supprime') }}">Oui</a>
                                            <a href="" class="btn btn-secondary" data-dismiss="modal">Non</a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Confirm Commande -->
                            <div class="modal fade" id="confirmOrder" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Supression du commentaire</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            Êtes-vous sûr de vouloir supprimer le commentaire ?
                                        </div>
                                        <div class="modal-footer">
                                            <a class="btn btn-danger" role="button" href="{{ path('panier.supprime') }}">Oui</a>
                                            <a href="" class="btn btn-secondary" data-dismiss="modal">Annuler</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="5" class="text-right">Total Commande:</th>
                            <th>
                                {{ somme|number_format(0, '', '.') }}€</th>
                        </tr>
                    </tfoot>

                </table>
                <p class="card-text text-center">
                    <a data-target="#removeAll" class="btn btn-danger" data-toggle="modal" href="">Vider le panier</a>
                    <a class="btn btn-success" role="button" href="{{ path('panier.supprime') }}">Valider la commande</a>
                </p>
            {% endif %}
        </div>
        <div class="col-md-4"></div>
    </div>


{% endblock %}
