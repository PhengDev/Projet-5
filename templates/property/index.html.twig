{% extends 'base.html.twig' %}
{% block title 'Liste des cartes' %}

{% block body %}
    <div class="text-center page bg-collection">
        <h1 class="text-warning">Cartes</h1>
        <div class="row mr-4 ml-4 cartes-collections">
            {% for property in properties %}
                <div class="col-md-4">
                    {% include "property/_property.html.twig" %}
                </div>
            {% endfor %}
        </div>
        <div class="pagination pagination-centered">
            {{ knp_pagination_render(properties) }}
        </div>
    </div>
{% endblock %}