{% extends 'base.html.twig' %}
{% block title 'Connection' %}

{% block body %}
    <div class="page text-center bg-login">
        <h1>Connexion</h1>
          {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
           {% if error %}
            <div class="alert alert-danger mt-4">
                {{ error.messageKey | trans(error.messagedata, 'security') }}
            </div>
        {% endif %}
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="username">Nom d'utilisateur</label><br>
                <input class="form-control" id="username" name="_username" type="text" value="{{ last_username }}">
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label><br>
                <input class="form-control" id="password" name="_password" type="password">
            </div>
            <p>
                <a href="{{path('request_resetting')}}">Mot de passe oubli√© ?</a>
            </p>
           
             <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
            <button class="btn btn-primary" type="submit">Se connecter</button>
        </form>
     
        <br>

    </div>


{% endblock %}
